<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:background="@android:color/holo_blue_bright">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:background="@android:color/holo_blue_dark">
        <TextView       
            android:id="@+id/tvPasswordReset"
            style="@style/TitleStyle"
            android:gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/ic_back_blue_dark"
            style="@style/TopPanelCircleImageViewStyle"
            local:MvxBind="Click GoBackCommand" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvEmailForRecovery"
        style="@style/LabelStyle"
        android:textColor="@android:color/background_dark" />
    <EditText
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        style="@style/UserNameStyle"
        android:imeOptions="actionDone"
        local:MvxBind="Text Email"/>
    
    <Button
        android:id="@+id/btSend"
        style="@style/MainButtonStyle"
        local:MvxBind="Click SendRecoveryMailCommand"/>
    
</LinearLayout>
