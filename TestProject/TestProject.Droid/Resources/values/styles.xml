<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Splash style -->
  <style name="Theme.Splash" parent="AppTheme.Base">
    <item name="android:windowBackground">@drawable/screen</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <!-- Application theme -->
  
  <style name="AppTheme" parent="AppTheme.Base">
  </style>

  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@android:color/white</item>
  </style>

  <style name="Toolbar">
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="ThemeToolbarNavigationView">
    <item name="android:listDivider">@color/colorPrimaryDark</item>
  </style>

  <style name="ButtonStyle1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginHorizontal">@dimen/compat_button_padding_horizontal_material</item>
    <item name="android:layout_marginVertical">@dimen/compat_button_padding_horizontal_material</item>
    <item name="android:textSize">30dp</item>
    <item name="android:textColor">@android:color/background_dark</item>
  </style>

  <style name="ButtonStyle2">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">150dp</item>
    <item name="android:layout_marginHorizontal">@dimen/compat_button_padding_horizontal_material</item>
    <item name="android:textSize">30dp</item>
    <item name="android:textColor">@android:color/background_dark</item>
  </style>

  <style name="LabelStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:textSize">30dp</item>
    <item name="android:textAlignment">viewStart</item>
  </style>

  <style name="UserNameStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">30dp</item>
  </style>

  <style name="PasswordStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">30dp</item>
    <item name="android:password">true</item>
  </style>

  <style name="DialogTextStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:textSize">15dp</item>
  </style>

  <style name="DialogButtonStyle">
    <item name="android:layout_marginHorizontal">@dimen/compat_button_padding_horizontal_material</item>
    <item name="android:layout_marginVertical">@dimen/compat_button_padding_horizontal_material</item>
    <item name="android:layout_width">@dimen/dialog_button_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15dp</item>
    <item name="android:background">@drawable/main_button_shape</item>
  </style>

  <style name="TodoItemButtonStyle">
    <item name="android:layout_width">@dimen/todoitem_button_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_margin">@dimen/todo_item_margin</item>
    <item name="android:background">@drawable/main_button_shape</item>
  </style>

</resources>
