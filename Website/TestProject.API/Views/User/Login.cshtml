@model ViewModels.UI.User.RequestLoginUserView

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div>
        <h4>Task list</h4>
        <hr />
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <span asp-validation-for="Name"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.Name)                        
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td>
                        <span asp-validation-for="Password"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.PasswordFor(model => model.Password)                        
                    </td>
                </tr>
            </table>
            <button class="authenticationButton" type="submit" value="Login">Login</button>
        }
    </div>

    <div>
        <hr />
        <h4>Without an account?</h4>
        @using (Html.BeginForm("Register", "User", FormMethod.Get))
        {
            <button class="authenticationButton" type="submit" value="Register">Register</button>
        }
    </div>
</body>
</html>
